{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{'inscription'|trans}}</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ inscription.id }}</td>
            </tr> #}
            <tr>
                <th>Date</th>
                <td>
                    {% if inscription.date %}{{ inscription.date|date('d/m/Y H:i') }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('inscription_index') }}">{{'inscription.backtolist'|trans}}</a>

    <form action="{{ path("inscription_delete" , { 'id':  inscription.id })}} " method="post">

        <input hidden="hidden" type="text" id="id_inscription" name="id" value="{{inscription.id}}"/>

        <input class="btn btn-danger " type="submit" value="{{'inscription.unsubscribe'|trans}}">

    </form>

{% endblock %}