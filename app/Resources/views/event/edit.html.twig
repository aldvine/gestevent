{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{'event.editing'|trans}}</h1>
        {% form_theme edit_form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
      
        <input class="btn btn-success col-sm-4" type="submit" value="{{'event.edit'|trans}}"/>
        {{ form_end(edit_form) }}

        {{ form_start(delete_form) }}
        <input class="btn btn-danger col-sm-4" type="submit" value="{{'event.delete'|trans}}">
        {{ form_end(delete_form) }}
        <a class="btn btn-primary col-sm-4" href="{{ path('event_index') }}">{{'event.backtolist'|trans}}</a>
    </div>
{% endblock %}